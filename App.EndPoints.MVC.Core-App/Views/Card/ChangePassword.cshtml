@using App.Domain.Core.Core_App.CardAggrigate.Entities
@using App.Domain.Core.Core_App.TransactionAggrigate.Entities
@using App.Domain.Core.Core_App.UserAggrigate.Entities
@model User
<div class="container px-5 my-5">
    <form id="contactForm" data-sb-form-api-token="API_TOKEN">
        <div class="form-floating mb-3">
            <select class="form-select" id="selectYourCard" aria-label="Select Your card">
                @for (int i = 0; i < Model.Cards.Count; i++)
                {
                    <option value="@Model.Cards[i].CardNumber">@Model.Cards[i].CardNumber</option>
                }
            </select>
            <label for="selectYourCard">Select Your card</label>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" id="pasword" type="text" placeholder="pasword" data-sb-validations="required" />
            <label for="pasword">pasword</label>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" id="newpassword" type="text" placeholder="newpassword" data-sb-validations="required" />
            <label for="newpassword">newpassword</label>
        </div>
        <div class="d-grid">
            <button class="btn btn-primary btn-lg disabled" id="submitButton" type="submit">Submit</button>
        </div>
    </form>
</div>
<script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>