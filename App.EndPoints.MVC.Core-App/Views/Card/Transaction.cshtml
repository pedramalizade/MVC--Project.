@using App.Domain.Core.Core_App.TransactionAggrigate.Entities
﻿@{
}
@model List<Transaction>
<form asp-action="Transaction" method="post">
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered table-sm ">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Amount</th>
                    <th>Source</th>
                    <th>Destination</th>
                    <th>TransactionDate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var T in Model)
                {
                    <tr>
                        <th scope="row">@T.TransactionId</th>
                        <td>@T.Amount</td>
                        <td>@T.SourceCardNumber</td>
                        <td>@T.DestinationCardNumber</td>
                        <td>@T.TranceactionTime</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</form>