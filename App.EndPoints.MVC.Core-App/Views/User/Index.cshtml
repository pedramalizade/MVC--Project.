@using App.Domain.Core.Core_App.UserAggrigate.Entities
@{
}
@model List<User>
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered table-sm ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <th>@user.Id</th>
                    <td>@user.Name</td>
                    <td>@user.Password</td>
                </tr>
            }
        </tbody>
    </table>
</div>